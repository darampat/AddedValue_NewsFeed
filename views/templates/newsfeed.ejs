<em class="text-center center-block">
    <!-- centralized text em -->
    Βρέθηκαν <%= output['totalResults'] %> αποτελέσματα<br>
    Query: <%=query%>
</em>
<% if (output['posts']) { %>
<% output['posts'].forEach(function(item) { %>
<!-- All the posts are being shown vertically and centered -->
<div class="container load-more">
    <div class="col-md-6 col-md-offset-6 blogShort">
        <a class="hover_style" href="<%- item.thread.url %>" target="_blank">
            <% if (item.thread.title_full) { %>
            <h1><%= item.thread.title_full %></h1>
            <% } else { %>
            <h1><%= item.thread.title %></h1>
            <% } %>
            <div class="center-cropped">
                <img src="<%- item.thread.main_image %>" alt="post img"
                     class="img-responsive img-thumbnail"
                     onError="this.onerror=null;this.src='https://users.it.teithe.gr/~it144252/photo-not-available.png';">
                <!-- onError if photo does not exists, load error image from users.it -->
            </div>
        </a>
        <article class="article-body">
            <p class="read-more"><%= item.text %></p>
        </article>
        <em class="pull-left">
            Πηγή:
            <a href="http://<%= item.thread.site_full %>" target="_blank">
                <%= item.thread.site_full %>
            </a>
        </em>
        <em class="pull-right">
            <%= moment(item.thread.published).format('LLLL') %>
            <!-- etc. Τρίτη, 17 Οκτωβρίου 2017 9:54 ΜΜ -->
        </em>
    </div>
</div>
<% }); %>
<p id="loading">
    <img src="https://users.it.teithe.gr/~it144252/loading.gif" alt="Loading…"/>
</p>
<% } else { %>
<h1>ERROR</h1>
<% } %>